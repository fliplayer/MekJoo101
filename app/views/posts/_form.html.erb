<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<div id="errors">
			<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= f.label :title %><br>
	<%= f.text_field :title %><br>
	<br>
	<%= f.label :subtitle %><br>
	<%= f.text_area :subtitle %>
	<br>
	<%= f.label :body %><br>
	<%= f.cktext_area :body, rows: 10 %>
	<br>
	<%= f.submit %>
<% end %>